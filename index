    <script>
        // Калькулятор стоимости
        const areaSlider = document.getElementById('areaSlider');
        const distanceSlider = document.getElementById('distanceSlider');
        const areaValue = document.getElementById('areaValue');
        const distanceValue = document.getElementById('distanceValue');
        const plotCostResult = document.getElementById('plotCostResult');
        const houseCostResult = document.getElementById('houseCostResult');
        const areaResult = document.getElementById('areaResult');
        const optionsCost = document.getElementById('optionsCost');
        const totalCostResult = document.getElementById('totalCostResult');
        const totalPrice = document.getElementById('totalPrice');
        const monthlyPayment = document.getElementById('monthlyPayment');
        const initialPayment = document.getElementById('initialPayment');
        
        // Константы
        const INITIAL_PAYMENT_PERCENT = 20;
        const DISTANCE_FACTOR = 5000;
        
        // Типы домов
        const houseTypeOptions = document.querySelectorAll('.house-type-option');
        let selectedHouseType = 'gasbeton-draft';
        let selectedHousePrice = 60000;
        
        // Обработчик выбора типа дома
        houseTypeOptions.forEach(option => {
            const radio = option.querySelector('input[type="radio"]');
            
            radio.addEventListener('change', function() {
                if (this.checked) {
                    selectedHouseType = this.value;
                    selectedHousePrice = parseInt(option.dataset.price);
                    
                    houseTypeOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    
                    updateCalculation();
                }
            });
        });
        
        // Дополнительные опции
        const options = {
            terrace: document.getElementById('optionTerrace'),
            sauna: document.getElementById('optionSauna'),
            garage: document.getElementById('optionGarage'),
            fireplace: document.getElementById('optionFireplace')
        };
        
        const optionPrices = {
            terrace: 200000,
            sauna: 250000,
            garage: 350000,
            fireplace: 150000
        };
        
        // Радиокнопки участков
        const plotOptions = document.querySelectorAll('.plot-option');
        let selectedPlotPrice = 1400000;
        let selectedPlotDistance = 30;
        
        // Обработчик выбора участка
        plotOptions.forEach(option => {
            const radio = option.querySelector('input[type="radio"]');
            
            radio.addEventListener('change', function() {
                if (this.checked) {
                    selectedPlotPrice = parseInt(this.value);
                    selectedPlotDistance = 30;
                    distanceSlider.value = 30;
                    
                    plotOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    
                    updateCalculation();
                }
            });
        });
        
        function updateCalculation() {
            const area = parseInt(areaSlider.value);
            const distance = parseInt(distanceSlider.value);
            const plotPrice = selectedPlotPrice;
            
            const housePrice = area * selectedHousePrice;
            const distanceExtra = Math.max(0, (distance - 30)) * DISTANCE_FACTOR;
            
            let optionsPrice = 0;
            if (options.terrace.checked) optionsPrice += optionPrices.terrace;
            if (options.sauna.checked) optionsPrice += optionPrices.sauna;
            if (options.garage.checked) optionsPrice += optionPrices.garage;
            if (options.fireplace.checked) optionsPrice += optionPrices.fireplace;
            
            const total = plotPrice + housePrice + optionsPrice + distanceExtra;
            
            areaValue.textContent = area + ' м²';
            distanceValue.textContent = distance + ' км';
            areaResult.textContent = area;
            
            plotCostResult.textContent = `${formatPrice(plotPrice)} ₽`;
            houseCostResult.textContent = formatPrice(housePrice) + ' ₽';
            optionsCost.textContent = formatPrice(optionsPrice) + ' ₽';
            totalCostResult.textContent = formatPrice(total) + ' ₽';
            totalPrice.textContent = formatPrice(total) + ' ₽';
            
            const initialPaymentAmount = total * (INITIAL_PAYMENT_PERCENT / 100);
            initialPayment.textContent = formatPrice(Math.round(initialPaymentAmount)) + ' ₽';
            
            const loanAmount = total - initialPaymentAmount;
            const monthlyRate = 0.06 / 12;
            const months = 20 * 12;
            
            const monthlyPaymentAmount = loanAmount * 
                (monthlyRate * Math.pow(1 + monthlyRate, months)) / 
                (Math.pow(1 + monthlyRate, months) - 1);
            
            monthlyPayment.textContent = formatPrice(Math.round(monthlyPaymentAmount)) + ' ₽/мес';
        }
        
        function formatPrice(price) {
            return Math.round(price).toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
        }
        
        areaSlider.addEventListener('input', updateCalculation);
        distanceSlider.addEventListener('input', updateCalculation);
        
        Object.values(options).forEach(option => {
            option.addEventListener('change', updateCalculation);
        });
        
        updateCalculation();
        
        // Кнопка получения расчета в Telegram
        document.getElementById('requestCalculation').addEventListener('click', function(e) {
            e.preventDefault();
            
            const area = areaSlider.value;
            const distance = distanceSlider.value;
            
            let houseTypeName = '';
            if (selectedHouseType === 'gasbeton-draft') {
                houseTypeName = 'Газобетон (черновая)';
            } else if (selectedHouseType === 'gasbeton-finished') {
                houseTypeName = 'Газобетон (под ключ)';
            } else if (selectedHouseType === 'frame') {
                houseTypeName = 'Каркасный (под ключ)';
            } else {
                houseTypeName = 'Барнхаус (базовый)';
            }
            
            let plotType = '';
            if (selectedPlotPrice === 1400000) {
                plotType = '1-я береговая линия (50 м до воды)';
            } else if (selectedPlotPrice === 1100000) {
                plotType = '2-я береговая линия (150 м до воды)';
            } else {
                plotType = 'Эконом класс';
            }
            
            const total = totalPrice.textContent;
            const monthly = monthlyPayment.textContent;
            const initial = initialPayment.textContent;
            
            const message = `Здравствуйте! Хочу получить детальный расчёт проекта:\n\n` +
                          `• Тип дома: ${houseTypeName}\n` +
                          `• Площадь дома: ${area} м²\n` +
                          `• Расстояние до города: ${distance} км\n` +
                          `• Участок: ${plotType} (7 соток)\n` +
                          `• Общая стоимость: ${total}\n` +
                          `• Первый взнос: ${initial}\n` +
                          `• Ежемесячный платеж: ${monthly}\n\n` +
                          `Прошу выслать подробную смету с учётом всех расстояний и размеров.`;
            
            window.open(`https://t.me/vlast_truda_dom?text=${encodeURIComponent(message)}`, '_blank');
        });
        
        // Плавная прокрутка
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    const headerHeight = document.querySelector('.header').offsetHeight;
                    window.scrollTo({
                        top: targetElement.offsetTop - headerHeight - 20,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Анимация карточек при прокрутке
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-card');
                }
            });
        }, { threshold: 0.1 });
        
        document.querySelectorAll('.plot-card, .type-card, .ready-card, .mortgage-card, .bank-logo').forEach(card => {
            observer.observe(card);
        });
        
        // Эффект пульсации для CTA кнопок
        setInterval(() => {
            document.querySelectorAll('.pulse').forEach(btn => {
                btn.classList.toggle('pulse');
                setTimeout(() => btn.classList.toggle('pulse'), 100);
            });
        }, 4000);
    </script>
</body>
</html>
